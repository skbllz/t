#!/usr/bin/zsh

FONTS='/home/t/.local/share/fonts'

if [[ ! -d $FONTS ]]; then
    mkdir $FONTS
fi

# download
curl -fLo  /temp https://github.com/ryanoasis/nerd-fonts/releases/download/v2.1.0/Mononoki.zip
# unzip and install
unzip /tmp/mononoki.zip -d $FONTS
# clear and regenerate font cache
fc-cache -f -v

if (($? == 0)); then
    echo 'fonts is up to date!'
fi

exit 0
